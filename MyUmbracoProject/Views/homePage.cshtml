@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>One Page Website</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        header {
            background: #0078D7;
            color: #fff;
            padding: 20px 10px;
            text-align: center;
        }

        nav {
            display: flex;
            justify-content: center;
            background: #005BB5;
            padding: 10px 0;
        }

        nav a {
            color: #fff;
            text-decoration: none;
            margin: 0 15px;
            font-weight: bold;
        }

        nav a:hover {
            text-decoration: underline;
        }

        section {
            padding: 20px;
        }

        .hero {
            background: #f4f4f4;
            padding: 50px 20px;
            text-align: center;
        }

        .hero h1 {
            margin-bottom: 10px;
        }

        .content {
            max-width: 800px;
            margin: auto;
        }

        footer {
            background: #333;
            color: #fff;
            text-align: center;
            padding: 10px 0;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <header>
        <h1>@Model.Title</h1>
    </header>

    <nav>
        <a href="/">Home</a>
        <a href="/aboutPage">About</a>
    </nav>

    <section id="about" class="hero">
        <h1>@Model.DescriptionTitle</h1>
        <p>@Model.Description</p>
    </section>


    <section id="contact">
        <div class="content">
            <h2>Contact Us</h2>
            <p>Feel free to reach out with any questions or inquiries.</p>
            <p>Email: <a href="mailto:Matthias.cecchi@gmail.com">Matthias.cecchi@gmail.com</a></p>
            <p>Phone: (+32) 0495 99 66 72</p>
        </div>
    </section>

    <footer>
        <p>&copy; 2024 My Website. All rights reserved.</p>
    </footer>
</body>
</html>
